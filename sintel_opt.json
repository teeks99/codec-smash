# This is a special JSON file, in that it supports comments that start with a #.  If you want to send this file 
# across the internet to a 3rd party, you should remove them first as their JSON parser may not accept them.

{
"input":[
    {
        "name":"sintel_clip",
        "files":[
            "sintel_clip.y4m",
            "sintel_clip.flac"
        ],
        "image_points":[
            {"sec":"2","w":"640","h":"480","x":"640","y":"150"},
            {"sec":"5","w":"640","h":"480","x":"675","y":"90"},
            {"sec":"7","w":"640","h":"480","x":"450","y":"150"},
            {"sec":"9.560","w":"640","h":"480","x":"390","y":"0"}
        ]
    }
]
,
"external_vars":{
    "FILL_manual_threads":"4"
}
,
"tests":[
# The first tests are for the almost-lossless category 
    {
        "title":"lossless",
        "commands":[
            "ffmpeg INPUT_FILES -vcodec CODEC -an -threads 0 INPUT_NAME-CODEC-lossless.mkv"
        ],
        "output":"INPUT_NAME-CODEC-lossless.mkv",
        "variables":[
            {"name":"CODEC","values":["ffv1"]}
        ]
    },
    {
        "title":"x264-lossless",
        "commands":[
            "ffmpeg INPUT_FILES -vcodec libx264 -vpre PRESET -an -threads FILL_manual_threads INPUT_NAME-x264-PRESET.mkv"
        ],
        "output":"INPUT_NAME-x264-PRESET.mkv",
        "variables":[
            {
                "name":"PRESET",
                "values":[
                    "lossless_ultrafast",
                    "lossless_medium", 
                    "lossless_max" 
                ]
            }
        ]
    },
    {
        "title":"x264-2p",
        "commands":[
            "ffmpeg INPUT_FILES -pass 1 -vcodec libx264 -vpre PRESET_firstpass -b RATEk -bt RATEk -an -threads FILL_manual_threads -f rawvideo -y /dev/null", 
            "ffmpeg INPUT_FILES -pass 2 -vcodec libx264 -vpre PRESET -b RATEk -bt RATEk -an -threads FILL_manual_threads INPUT_NAME-x264-PRESET-RATE-2p.mkv"
        ],
        "output":"INPUT_NAME-x264-PRESET-RATE-2p.mkv",
        "variables":[
            {"name":"PRESET","values":["veryslow","medium","ultrafast"]},
            {"name":"RATE","values":["4000"]}
        ]
    },
    {
        "title":"x264-1p",
        "commands":[
            "ffmpeg INPUT_FILES -vcodec libx264 -vpre PRESET -b RATEk -an -threads FILL_manual_threads INPUT_NAME-x264-PRESET-RATE-1p.mkv"
        ],
        "output":"INPUT_NAME-x264-PRESET-RATE-1p.mkv",
        "variables":[
            {"name":"PRESET","values":["veryslow","medium","ultrafast"]},
            {"name":"RATE","values":["4000"]}
        ]
    },

    {
        "title":"simple-2p",
        "commands":[
            "ffmpeg INPUT_FILES -pass 1 -vcodec CODEC -b RATEk -bt RATEk -an -threads 0 -f rawvideo -y /dev/null",
            "ffmpeg INPUT_FILES -pass 2 -vcodec CODEC -b RATEk -an -threads 0 INPUT_NAME-CODEC-RATE-2p.mkv"
        ],
        "output":"INPUT_NAME-CODEC-RATE-2p.mkv",
        "variables":[
            {"name":"CODEC","values":["libvpx","libtheora","mpeg4","mjpeg","mpeg2"]},
            {"name":"RATE","values":["4000"]}
        ]
    },
    {
        "title":"simple-1p",
        "commands":[
            "ffmpeg INPUT_FILES -vcodec CODEC -b RATEk -an -threads 0 INPUT_NAME-CODEC-RATE-1p.mkv"
        ],
        "output":"INPUT_NAME-CODEC-RATE-1p.mkv",
        "variables":[
            {"name":"CODEC","values":["libvpx","libtheora","mpeg4","mjpeg","mpeg2]},
            {"name":"RATE","values":["4000"]}
        ]
    }
]
}
